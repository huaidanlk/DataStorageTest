<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.datastoragetest.MainActivity">

    <EditText
        android:id="@+id/et_input_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button
        android:id="@+id/btn_commit_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save（file）"
        android:layout_below="@+id/et_input_file"/>
    <EditText
        android:id="@+id/et_input_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_commit_file"/>
    <Button
        android:id="@+id/btn_commit_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save(share)"
        android:layout_below="@+id/et_input_share"/>
</RelativeLayout>
